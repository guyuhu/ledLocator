void setMessage()
{
	SPI1_Send(guideMessage);
	SPI1_Send(idMessage);
	SPI1_Send(coordMessage);
	SPI1_Send(checkMessage);
}

void port_init(void)
{
 PORTB = 0x00;
 DDRB  = 0x00;
}

//TIMER0 initialize - prescale:1024
// WGM: Normal
// desired value: 100Hz
// actual value: 100.160Hz (0.2%)
void timer0_init(void)
{
 TCCR0B = 0x00; //stop
 OCR0A = 0x75;
 OCR0B = 0x75;
 TCNT0 = 0x8B; //set count
 TCCR0A = 0x00; 
 TCCR0B = 0x05; //start timer
}



//call this routine to initialize all peripherals
void init_devices(void)
{
 //stop errant interrupts until set up
 CLI(); //disable all interrupts
 port_init();
 timer0_init();

 MCUCR = 0x00;
 TIMSK0 = 0x02; //timer interrupt sources
 GIMSK = 0x00; //interrupt sources
 SEI(); //re-enable interrupts
 //all peripherals are now initialized
}

void main(void)
{   
    unsigned char i=0;
    DDRB=0XFF;
    PORTB=0XFF;
    SPI1_Init();
	checkOut();
    while(1)
    {     
	   setMessage();
	  // SPI1_Send(guideMessage[8]);
	  // SPI1_Send(guideMessage);
    }
}

#pragma interrupt_handler timer0_ovf_isr:iv_TIM0_OVF
void timer0_ovf_isr(void)
{
 	 TCNT0 = 0x8B; //reload counter value
}